# Model Provider (openai, anthropic, openrouter, xai, heurist)
MODEL_PROVIDER=openai

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter API Key (required if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# XAI API Key (required if using XAI)
XAI_API_KEY=your_xai_api_key_here

# Heurist API Key (required if using Heurist)
HEURIST_API_KEY=your_heurist_api_key_here

# Agent settings (optional)
OPENAI_DEFAULT_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=20000

# Model names for different providers
# OpenAI: gpt-4.1-mini, gpt-4-turbo, etc.
# Anthropic: anthropic/claude-3-5-sonnet-20241022, anthropic/claude-3-5-haiku-20241022
# OpenRouter: openrouter/meta-llama/llama-3.1-8b-instruct:free, openrouter/anthropic/claude-3.5-sonnet
# XAI: xai/grok-beta
# Heurist: heurist/meta-llama-3.1-405b-instruct, heurist/qwen2.5-72b-instruct

# Heurist MCP SSE URL
MCP_SSE_URL=YOUR_MCP_SSE_URL_HERE # you can get one from https://mcp.heurist.ai/

# Telegram Bot settings (optional, required if using the Telegram interface)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_1, YOUR_CHAT_ID_2, ...

# Optional: Trace file path (default: agent_trace.jsonl)
# TRACE_FILE=agent_trace.jsonl